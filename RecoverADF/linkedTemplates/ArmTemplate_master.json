{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "recoveradf"
		},
		"AzureBlobStorage1_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AzureBlobStorage1'"
		},
		"sourceBlob_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'sourceBlob'"
		},
		"destinationblob_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'destinationblob'"
		},
		"destinbationblob_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'destinbationblob'"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "RecoverADF_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"AzureBlobStorage1_connectionString": {
						"value": "[parameters('AzureBlobStorage1_connectionString')]"
					},
					"sourceBlob_connectionString": {
						"value": "[parameters('sourceBlob_connectionString')]"
					},
					"destinationblob_connectionString": {
						"value": "[parameters('destinationblob_connectionString')]"
					},
					"destinbationblob_connectionString": {
						"value": "[parameters('destinbationblob_connectionString')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}